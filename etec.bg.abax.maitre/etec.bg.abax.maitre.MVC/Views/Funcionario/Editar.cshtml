@model etec.bg.abax.maitre.MVC.Models.Pessoa.Funcionario

@{
    ViewData["Title"] = "Editar";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
</head>
<body>

<h4>Funcionario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--<div class="form-group">
        <label asp-for="idFunc" class="control-label"></label>
        <input asp-for="idFunc" class="form-control" />
        <span asp-validation-for="idFunc" class="text-danger"></span>
    </div>-->
            <div class="form-group">
                <label asp-for="cargo" class="control-label"></label>
                <input asp-for="cargo"autocomplete="off"  class="form-control" />
                <span asp-validation-for="cargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nome" class="control-label"></label>
                <input asp-for="nome" autocomplete="off" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fone" class="control-label"></label>
                <input asp-for="fone" id="telefoneCliente" autocomplete="off" class="form-control" />
                <span asp-validation-for="fone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="eMail" class="control-label"></label>
                <input asp-for="eMail" autocomplete="off" class="form-control" />
                <span asp-validation-for="eMail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="senha" class="control-label"></label>
                <input asp-for="senha" type="password" class="form-control" />
                <span asp-validation-for="senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="funcao" class="control-label"></label>
                <select asp-for="funcao" class="form-control">
                    <option value="Administração">Administração</option>
                    <option value="Caixa">Caixa</option>
                    <option value="Cozinha">Cozinha</option>
                    <option value="RH">RH</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
   <button title="Voltar" class="btn btn-default" onclick="location.href='@Url.Action("Listar","Funcionario")'"><i class="glyphicon glyphicon-chevron-left"></i></button>
</div>

</body>
</html>
