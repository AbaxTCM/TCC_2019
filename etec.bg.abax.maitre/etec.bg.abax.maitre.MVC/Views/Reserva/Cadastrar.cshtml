@model etec.bg.abax.maitre.MVC.Models.Reserva.Reserva

@{
    ViewData["Title"] = "Cadastrar";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastrar</title>
</head>
<body>

    <h4>Reserva</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Cadastrar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="idReserva" class="control-label"></label>
                    <input asp-for="idReserva" class="form-control" />
                    <span asp-validation-for="idReserva" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="mesa.numero" class="control-label"></label>
                    <input asp-for="mesa.numero" class="form-control" />
                    <span asp-validation-for="mesa.numero" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="finalidade.nome" class="control-label"></label>
                    <input asp-for="finalidade.nome" class="form-control" />
                    <span asp-validation-for="finalidade.nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="agenda.dataHora" class="control-label"></label>
                    <input asp-for="agenda.dataHora" class="form-control" />
                    <span asp-validation-for="agenda.dataHora" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="atendimento" /> @Html.DisplayNameFor(model => model.atendimento)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Cadastrar" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <button title="Voltar" class="btn btn-default" onclick="location.href='@Url.Action("Listar","Reserva")'"><i class="glyphicon glyphicon-chevron-left"></i></button>
    </div>

</body>
</html>
