                <div class="modal-body">
                    <div class="tab-content">
                        <div id="cliente" class="tab-pane active">
                            <h3>Cadastro de Cliente</h3><br />
                            <div class="form-group">
                                <label>Nome</label>
                                <input type="text" name="nome" id="nomeCliente" placeholder="Nome " class="form-control" autofocus required />
                            </div>
                            <div class="form-group">
                                <label> E-mail</label>
                                <input type="email" name="email" id="emailCliente" placeholder="E-mail " class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label> CPF </label>
                                <input type="text" name="cpf" id="cpfCliente" placeholder="000.000.000-00 " class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label> Telefone</label>
                                <input type="text" name="telefone" id="telefoneCliente" placeholder="(00) 0000-0000" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label> Senha </label>
                                <input type="password" name="senha" id="senhaCliente" placeholder="Senha " class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label> Confirmar senha </label>
                                <input type="password" name="confirmarSenhaCliente" id="confirmarSenhaCliente" placeholder="Confirmar senha " class="form-control" required /><br />
                            </div>
                            <div class="modal-footer">
                                <input type="submit" id="btn-registro" class="btn btn-primary" value="Registrar" onclick="registrarCliente()" />
                                <button type="button" id="btn-cancelar" onclick="cancelar()" data-dismiss="modal" class="btn btn-danger">Cancelar</button>
                            </div>
                        </div>
                        <div id="restaurante" class="tab-pane">
                            <h3>Cadastro de Restaurante</h3><br />

                            <div class="form-group">
                                <label>  Nome </label>
                                <input type="text" name="nome" id="nomeRestaurante" placeholder="Nome " class="form-control" autofocus required />
                            </div>
                            <div class="form-group">
                                <label> E-mail</label>
                                <input type="email" name="email" id="emailRestaurante" placeholder="E-mail " class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label> Senha</label>
                                <input type="password" name="senha" id="senhaRestaurante" placeholder="Senha " class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label> Confirmar senha </label>
                                <input type="password" name="confirmarSenhaRestaurante" id="confirmarSenhaRestaurante" placeholder="Confirmar senha " class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label>  Endereço</label>
                                <input type="text" name="endereco" id="enderecoRestaurante" placeholder="Endereço " class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label>Telefone</label>
                                <input type="text" name="telefone" id="telefoneRestaurante" placeholder="(00) 0000-0000" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label> CNPJ</label>
                                <input type="text" name="cnpj" id="cnpjRestaurante" placeholder="000.000.000-00 " class="form-control" required />
                            </div>
                            <div class="modal-footer">
                                <input type="submit" id="btn-registro-restaurante" class="btn btn-primary" value="Registrar" onclick="registrarRestaurante()" />
                                <button type="button" id="btn-cancelar" onclick="cancelar()" data-dismiss="modal" class="btn btn-danger">Cancelar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="loginUsuario" class="modal fade" role="dialog">
