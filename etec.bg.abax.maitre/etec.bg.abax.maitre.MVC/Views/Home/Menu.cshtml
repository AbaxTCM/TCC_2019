            <div class="card-body">
                <h5 class="card-title">Cardápio</h5>
                <p class="card-text">Gerenciamento do cardápio do restaurante</p>
                <a asp-action="Cardapio" class="btn btn-primary">Acessar</a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/images/logo-user-png-6.png" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Reserva</h5>
                <p class="card-text">Gerenciamento das reservas</p>
                <a asp-action="Reserva" class="btn btn-primary">Acessar</a>
