        <button asp-action="Listar" title="Voltar" class="btn btn-default"><i class="glyphicon glyphicon-chevron-left"></i></button>
        <button class="btn btn-danger" title="Deletar" type="submit"><i class="glyphicon glyphicon-remove"></i></button>
