@model IEnumerable<etec.bg.abax.maitre.MVC.Models.Pessoa.Cliente>

@{
    ViewData["Title"] = "Listar";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listar</title>
</head>
<body>
    <p>
        <h3>Cadastrar cliente <button title="" class="btn btn-primary" onclick="location.href='@Url.Action("Cadastrar","Bebida")'"><i class="glyphicon glyphicon-plus"></i></h3> </button>
    </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eMail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.eMail)
            </td>
            <td>
                <button title="Detalhar" class="btn btn-primary" onclick="location.href='@Url.Action("Detalhar","Cliente",new { id = item.idCliente })'"><i class="glyphicon glyphicon-search"></i></button>
                <button title="Editar" class="btn btn-default" onclick="location.href='@Url.Action("Editar","Cliente",new { id = item.idCliente })'"><i class="glyphicon glyphicon-pencil"></i></button>
                <button title="Deletar" class="btn btn-danger" onclick="location.href='@Url.Action("Deletar","Cliente",new { id = item.idCliente })'"><i class="glyphicon glyphicon-remove"></i></button>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
