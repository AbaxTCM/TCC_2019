@model etec.bg.abax.maitre.MVC.Models.Cardapio.Prato

@{
    ViewData["Title"] = "Cadastrar";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastrar</title>
</head>
<body>

    <h3>Prato</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Cadastrar" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <!--<div class="form-group">
        <label asp-for="idPrato" class="control-label"></label>
        <input asp-for="idPrato" class="form-control" />
        <span asp-validation-for="idPrato" class="text-danger"></span>
    </div>-->
                <div class="form-group">
                    <label asp-for="nome" class="control-label"></label>
                    <input asp-for="nome" class="form-control" />
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="imagem" class="control-label"></label>
                    <input type="file" name="pic" class="form-control" />
                    <span asp-validation-for="imagem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="valor" class="control-label"></label>
                    <input asp-for="valor" class="form-control" />
                    <span asp-validation-for="valor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="diaSemana" class="control-label"></label>
                    <select asp-for="diaSemana" class="form-control">
                        <option value="domingo">Domingo</option>
                        <option value="segunda-feira">Segunda-Feira</option>
                        <option value="terca-feira">Terça-Feira</option>
                        <option value="quarta-feira">Quarta-Feira</option>
                        <option value="quinta-feira">Quinta-Feira</option>
                        <option value="sexta-feira">Sexta-Feira</option>
                        <option value="sabado">Sábado</option>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Salvar</button>
                </div>
            </form>
        </div>
    </div>

    <div>
        <button class="btn btn-default" onclick="location.href='@Url.Action("Listar","Prato")'"><i class="glyphicon glyphicon-chevron-left"></i></button>
    </div>

</body>
</html>
