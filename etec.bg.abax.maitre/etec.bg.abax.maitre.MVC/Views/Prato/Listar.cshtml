@model IEnumerable<etec.bg.abax.maitre.MVC.Models.Cardapio.Prato>

@{
    ViewData["Title"] = "Listar";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listar</title>
</head>
<body>
    <p>
        <button class="btn btn-primary" onclick="location.href='@Url.Action("Cadastrar","Prato")'"><b>+</b></button>
    </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idPrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.diaSemana)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idPrato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.imagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diaSemana)
            </td>
            <td>
                <input type="button" class="btn btn-primary" value="Editar" onclick="location.href='@Url.Action("Editar","Prato",new { id = item.idPrato })'" />
                <input type="button" class="btn btn-primary" value="Detalhar" onclick="location.href='@Url.Action("Detalhar","Prato",new { id = item.idPrato })'" />
                <button class="btn btn-danger" onclick="location.href='@Url.Action("Deletar","Prato",new { id = item.idPrato })'"><b>x</b></button>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
