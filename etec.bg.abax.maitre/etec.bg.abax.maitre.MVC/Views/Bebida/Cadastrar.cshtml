@model etec.bg.abax.maitre.MVC.Models.Cardapio.Bebida

@{
    ViewData["Title"] = "Cadastrar";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastrar bebida</title>
</head>
<body>

    <h4>Cadastrar bebida</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Cadastrar" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <!--<div class="form-group">
                    <label asp-for="idBebida" class="control-label"></label>
                    <input asp-for="idBebida" class="form-control" />
                    <span asp-validation-for="idBebida" class="text-danger"></span>
                </div>-->
                <div class="form-group">
                    <label asp-for="nome" class="control-label"></label>
                    <input asp-for="nome" class="form-control" />
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="tipo" class="control-label"></label>
                    <input asp-for="tipo" class="form-control" />
                    <span asp-validation-for="tipo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="imagem" class="control-label"></label>
                    <input type="file" name="pic" class="form-control" />
                    <span asp-validation-for="imagem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="valor" class="control-label"></label>
                    <input asp-for="valor" class="form-control" />
                    <span asp-validation-for="valor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Cadastrar" />
                </div>
            </form>
        </div>
    </div>

    <!--<div>
        <a asp-action="Listar">Back to List</a>
    </div>-->

    <div>
        <button class="btn btn-default" title="Voltar" onclick="location.href='@Url.Action("Listar","Bebida")'"><i class="glyphicon glyphicon-chevron-left"></i></button>
    </div>


</body>
</html>
