@model IEnumerable<etec.bg.abax.maitre.MVC.Models.Cardapio.Bebida>

@{
    ViewData["Title"] = "Listar";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listar</title>
</head>
<body>
    <!--
    <p>
        <a asp-action="Cadastrar">Create New</a>
    </p>-->
    @if (etec.bg.abax.maitre.MVC.Program.Session.Instance.Funcao != "cli")
    {
        <p>
            <h3 style="display:inline-flex">Cadastrar Bebida</h3> <button title="" class="btn btn-primary" onclick="location.href='@Url.Action("Cadastrar", "Bebida")'"><i class="glyphicon glyphicon-plus"></i> </button>
        </p>
    }
    <h3>Bebidas</h3>
    <br />
    <br />

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.imagem)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.valor)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/uploadImages/@item.imagem" width="50" height="50" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.valor)
                    </td>
                    <!--<td>
                        @Html.ActionLink("Edit", "Editar", new { id = item.idBebida }) |
                        @Html.ActionLink("Details", "Detalhar", new { id = item.idBebida }) |
                        @Html.ActionLink("Delete", "Deletar", new { id = item.idBebida })
                    </td>-->
                    <td>
                        <button title="Detalhar" class="btn btn-primary" onclick="location.href='@Url.Action("Detalhar","Bebida",new { id = item.idBebida })'"><i class="glyphicon glyphicon-search"></i></button>
                        @if (etec.bg.abax.maitre.MVC.Program.Session.Instance.Funcao != "cli")
                        {
                            <button title="Editar" class="btn btn-default" onclick="location.href='@Url.Action("Editar", "Bebida", new { id = item.idBebida })'"><i class="glyphicon glyphicon-pencil"></i></button>
                            <button title="Deletar" class="btn btn-danger" onclick="location.href='@Url.Action("Deletar", "Bebida", new { id = item.idBebida })'"><i class="glyphicon glyphicon-remove"></i></button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
